package loop;
import java.util.Scanner;

public class PrintPyramid {

	public static void main(String[] args) {
		//スキャナの準備
		Scanner scan = new Scanner(System.in);
		
		//変数の宣言
		int stepNumber;
		
		//プロンプト
		System.out.println("ピラミッドを表示します。");
		
		//ユーザ入力
		System.out.print("段数>>");
		stepNumber = scan.nextInt();
		
		//メソッド呼び出し
		printPyramid(stepNumber);

	}
	static void printPyramid(int stepNumber){
		for(int i = 1; i <= stepNumber; i++){
			for(int j = 1; j <= stepNumber - i + 1; j++);
				System.out.print(" ");
			for(int j = 2; j <= (i - 1) * 2 + 1; j++);
				System.out.print("*");
			System.out.println();
			
			}
		}
			
	}

